{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Filament Desktop",
  "version": "0.1.0",
  "identifier": "com.filament.desktop",
  "build": {
    "frontendDist": "../filament-client-web/dist",
    "devUrl": "https://app.filament.local"
  },
  "app": {
    "windows": [
      {
        "title": "Filament",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "freezePrototype": true,
      "dangerousDisableAssetCspModification": false,
      "csp": "default-src 'none'; base-uri 'none'; object-src 'none'; frame-ancestors 'none'; img-src 'self' data:; style-src 'self'; script-src 'self'; connect-src 'self' https://api.filament.local; font-src 'self'; form-action 'none'; media-src 'self' blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true
  }
}
